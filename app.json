{
  "expo": {
    "name": "derm-app",
    "slug": "derm-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "jsEngine": "jsc",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Разрешить приложению доступ к фото"
        }
      ]
    ],

    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
